	.js-partidos
		flex-wrap wrap
		box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
		margin 15px 0
		padding 10px 15px
		border none
		padding-bottom 25px
		.js-partidos__fecha
			max-width 100%
			padding-bottom 10px
			text-align center
		.js-partidos__versus
			max-width 100%
		.js-partidos__empate
			max-width 100%
			padding 5px 0
		.js-partidos__puntaje
		.js-partidos__score
			padding 5px 10px
		.js-partidos__puntaje
			position absolute
			bottom 0
			text-align right
			right 0
		.js-partidos__score
			position absolute
			left 0
			bottom 0
			text-align left
@media ( max-width: 600px )
	.js-container
		align-items center
	.js-fondo 
		.js-logo 
			img
				max-width 150px
				margin-top 45px
		&.concurso
			height 600px
			padding 0 20px
			.js-logo 
				img
					max-width 150px
			.js-contenido--ganadores
			.js-contenido--concurso 
				p
					font-size 28px
					line-height 26px
@media ( max-width: 480px )
	.js-partidos
		.js-partidos__versus 
			.js-partido__versus--flag
				padding 0 5px
		.mdl-radio__label
			font-size 14px
			line-height 16px !important
	.js-score
		display block
		.js-score__user
			justify-content center
			border none
			border-bottom 2px solid #FFFFFF
		.js-score__monto
			justify-content center
	.js-container--title
		h2
			text-align center
	.js-header
		padding 10px 
		.js-header--right 
			a
				&.link-middle
					padding-right 0
					margin-right 0
					border-right none					