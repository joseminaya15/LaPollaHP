	color #FFFFFF
	text-align center
	.js-contenido--participantes
		max-width 600px
		margin auto
		h2
			font-size 40px
			line-height 36px
			margin 20px 0
		p
			font-size 18px
			line-height 22px
	img
		width 100%
		max-width 900px
		margin 20px 0
.js-participantes
	border-top 1px solid #757575
	padding 20px 0
.js-ranking
	.js-rankin--link
		a
			&.link-middle
				padding 0 10px
				margin 0 10px
	h2
		font-family $bold
#mecanica
	text-align center
	h2
		font-size 40px
		margin 20px 0
	.js-mecanica
		flexCenter()
		justify-content center
		flex-wrap wrap
		.js-mecanica--contenido
			width 100%
			max-width 200px
			margin 25px 30px
			border 1px solid $color
			text-align center
			padding 20px
			height 200px
			border-radius 50%
			position relative
			.js-pelota
				position absolute
				bottom -15px
				left 0
				right 0
				text-align center
			h2
				margin 10px 0
				font-size 30px
			p
				line-height 20px
				span
					font-family $bold
			a
				background-color $color !important
				color #FFFFFF
				font-family $bold
				height 28px
				line-height 28px
				text-transform initial
				margin-top 10px
				text-decoration none
				border-radius 5px
