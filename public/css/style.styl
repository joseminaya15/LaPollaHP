	background url(../img/fondo/fondo-terminos.jpg) no-repeat center center
	background-size cover
	height 320px
	text-align center
	color #FFFFFF
	h2
		font-size 42px
		text-shadow 2px 2px 7px rgba(0, 0, 0, 0.54)
		line-height 38px
	a
		background-color $color !important
		text-transform initial
		color #FFFFFF
		font-family $bold
		width 100%
		max-width 180px
		font-size 16px
		margin-top 20px
		border-radius 5px
		height 32px
		line-height 32px
		text-decoration none
footer
	background-color #87898B
	text-align center
	p
		color #FFFFFF
		margin 0
/*NAV-TABS*/
.nav-tabs
	border none
	&>li
		float right
		&>a
			border 2px solid transparent
			color $color
			&:hover
				border 2px solid transparent	
				border-bottom 2px solid $color
				background-color transparent
		&.active
			a
				color $color
				border 2px solid transparent
				border-bottom 2px solid $color
				font-family $bold
				&:focus
				&:hover
					color $color
					border 2px solid transparent
					border-bottom 2px solid $color
/*SCROLL*/
::-webkit-scrollbar
	width 6px
	height 5px
::-webkit-scrollbar-track
	background-color transparent
	border-radius 10px
::-webkit-scrollbar-thumb
	background-color #AAAAAA
	border-radius 10px
/*TABLE*/
table
	&>tbody
		&>tr
			&>td
				color #000000
				padding 5px 10px !important
				line-height 16px !important
	&>thead
		&>tr
			&>th
				color #000000
/*MODAL*/
.modal
	&.fade
		.modal-dialog
			position absolute
			top 50%
			left 50%
			transform()
		&.in
			.modal-dialog
				opacity 1
				scale()
				transform()
/*MATERIAL DESIGN*/
.mdl-card
	width 100%
	.mdl-card__title
		display block
		h2
			color #757575
			margin 0
			font-size 26px
			line-height 26px
	.mdl-card__supporting-text
		width 100%
		h2
			margin 20px 0
			text-align center
			color #000000
		small
			font-size 16px
			line-height 16px
	.mdl-card__actions
		text-align right
		padding 16px
		button
			margin 5px
