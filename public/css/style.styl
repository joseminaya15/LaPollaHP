$light   = 'HPSimplified-Light', sans-serif
$regular = 'HPSimplified-Regular', sans-serif
$bold    = 'HPSimplified-Bold', sans-serif
$color   = #0096D6
$Tcenter = translate(-50% , -50%)
flexCenter()
	display flex
	display -webkit-flex
	align-items center
flexStart()
	display flex
	display -webkit-flex
	align-items start
flexEnd()
	display flex
	display -webkit-flex
	align-items flex-end
transitionOpacity()
	-webkit-transition opacity .3s linear
	-moz-transition opacity .3s linear
	-ms-transition opacity .3s linear
	-o-transition opacity .3s linear
	transition opacity .3s linear
transitionWidth()
	-webkit-transition width .3s linear
	-moz-transition width .3s linear
	-ms-transition width .3s linear
	-o-transition width .3s linear
	transition width .3s linear
transitionMaxWidth()
	-webkit-transition max-width .3s linear
	-moz-transition max-width .3s linear
	-ms-transition max-width .3s linear
	-o-transition max-width .3s linear
	transition max-width .3s linear
transitionBgColor()
	-webkit-transition background-color .3s linear
	-moz-transition background-color .3s linear
	-ms-transition background-color .3s linear
	-o-transition background-color .3s linear
	transition background-color .3s linear
transitionTransform()
	-webkit-transition transform .3s linear
	-moz-transition transform .3s linear
	-ms-transition transform .3s linear
	-o-transition transform .3s linear
	transition transform .3s linear
absolute()
	position absolute
	top 0
	left 0
	right 0
	bottom 0
relative()
	position relative
	top 0
	left 0
	right 0
	bottom 0
transform()
	-webkit-transform $Tcenter
    -moz-transform $Tcenter
    -ms-transform $Tcenter
    -o-transform $Tcenter
    transform $Tcenter
scale()
	-webkit-transform scale(1)
    -moz-transform scale(1)
    -ms-transform scale(1)
    -o-transform scale(1)
    transform scale(1)
flipCard()
	-moz-backface-visibility hidden
	-webkit-backface-visibility hidden
	backface-visibility hidden
	-webkit-transition -webkit-transform 500ms
	-moz-transition -moz-transform 500ms
	-o-transition -o-transform 500ms
	transition transform 500ms
	border-radius 5px
	position absolute
flipCardFront()
	-webkit-transform perspective(600) rotateY(0)
	-moz-transform perspective(600) rotateY(0)
	-o-transform perspective(600) rotateY(0)
	transform perspective(600) rotateY(0)
flipCardBack()
	-webkit-transform rotateY(-180deg)
	-moz-transform rotateY(-180deg)
	-o-transform rotateY(-180deg)
	transform rotateY(-180deg)
	z-index 900
flipCardFrontHover()
	-webkit-transform rotateY(180deg)
	-moz-transform rotateY(180deg)
	-o-transform rotateY(180deg)
	transform rotateY(180deg)
	-webkit-transform perspective(600) rotateY(180deg)
	-moz-transform perspective(600) rotateY(180deg)
	-o-transform perspective(600) rotateY(180deg)
	transform perspective(600) rotateY(180deg)
flipCardBackHover()
	-webkit-transform rotateY(0)
	-moz-transform rotateY(0)
	-o-transform rotateY(0)
	transform rotateY(0)
	-webkit-transform perspective(600) rotateY(0)
	-moz-transform perspective(600) rotateY(0)
	-o-transform perspective(600) rotateY(0)
	transform perspective(600) rotateY(0)
	z-index 950
body
	margin 0
	padding 0
	font-family $regular
	color #000000
	background-color #FFFFFF
.section
	position relative
p
	margin 0
.js-flex
	flexCenter()
.js-header
	position fixed
	top 0
	width 100%
	background-color $color
	z-index 5
	padding 10px 25px
	color #FFFFFF
	flexCenter()
	img
		width 100%
		max-width 41px
	.js-header--left
		flexCenter()
		width 100%
		justify-content flex-start
		p
			font-family $bold
			margin-left 10px
			font-size 16px
			line-height 16px
	.js-header--right
		flexCenter()
		width 100%
		justify-content flex-end
		flex-wrap wrap
		a
			text-decoration none
			color #FFFFFF
			font-size 16px
			line-height 16px
			cursor pointer
			&.link-middle
				padding 0 5px
				margin 0 5px
				border-right 1px solid #FFFFFF
				border-left 1px solid #FFFFFF
.js-fondo
	background url(../img/fondo/fondo-fase.jpg) no-repeat center center
	background-size cover
	position relative
	right 0
	left 0
	bottom 0
	top 0
	height 250px
	.js-logo
		flexCenter()
		justify-content center
		img
			transitionMaxWidth()
			position relative
			z-index 10
			top 0
			width 100%
			max-width 160px
			margin-top 30px
	&.concurso
		background url(../img/fondo/fondo-login.jpg) no-repeat center center
		background-size cover
		height 800px
		margin-top 60px
		color #FFFFFF
		text-align center
		padding 0 30px
		.js-logo
			img
				max-width 236px
				top -25px
				margin 0
		.js-contenido--concurso
			margin 25px 0
			p
				font-size 30px
				line-height 32px
				text-shadow 2px 2px 7px rgba(0, 0, 0, 0.54)
			img
				margin-top 20px
				width 100%
				max-width 800px
		.js-contenido--ganadores
			max-width 500px
			margin auto
			p
				font-size 30px
				line-height 32px
				span
					font-family $bold
.js-link
	flexCenter()
	justify-content center
	a
		font-family $bold
		color $color !important
		padding 5px 15px
		text-decoration none
		&.active
			border-bottom 3px solid $color
.js-partidos
	flexCenter()
	transitionBgColor()
	padding 10px 0
	border-bottom 1px solid #000000
	position relative
	p
		margin 0
		line-height 18px
	&.js-bgcolor
		background-color #D0D0D0
		pointer-events: none
	.js-partidos__fecha
		width 100%
		max-width 200px
		p
			margin 0
	.js-partidos__versus
		flexCenter()
		width 100%
		max-width 525px
		justify-content center
		p
			width 100%
			max-width 20px
			text-align center
		.js-partido__versus--flag
			flexCenter()
			width 100%
			max-width 255px
			padding 0 10px
			&:nth-child(1)
				justify-content flex-end
			&:nth-child(2)
				justify-content flex-start
			img
				padding 0 10px
			.mdl-radio
				font-weight 100
				flexCenter()
				.mdl-radio__label
					line-height 18px
					text-align left
				&.js-right
					padding-left 0
					padding-right 24px
					.mdl-radio__outer-circle
						right 0
						left initial
					.mdl-radio__inner-circle
						right 4px
						left inherit
					.mdl-radio__ripple-container
						right -13px
						left inherit
					.mdl-radio__label
						text-align right
	.js-partidos__empate
		width 100%
		max-width 120px
		text-align center
	.js-partidos__score
		width 100%
		max-width 120px
		text-align center
		small
			font-size 16px
	.js-partidos__puntaje
		width 100%
		max-width 95px
		text-align center
		span
			font-family $bold
			font-size 16px
.js-partidos--disabled
	pointer-events none
	opacity .3			
.js-fondo__imagen
	background url(../img/fondo/fondo-imagen.jpg) no-repeat center center
	background-size cover
	absolute()
	&:AFTER
		content ''
		background-color #000000
		opacity .2
		absolute()
.js-score
