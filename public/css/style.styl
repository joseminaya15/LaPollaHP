	color #FFFFFF
	flexCenter()
	.js-score__user
		flexCenter()
		width 100%
		justify-content flex-end
		padding 15px 20px
		border-right 2px solid #FFFFFF
	.js-score__monto
		flexCenter()
		width 100%
		justify-content flex-start
		padding 15px 20px
	p
		flexCenter()
		line-height 16px
		font-size 16px
	span
		font-size 30px
		margin 0 8px
		font-family $bold
.js-window
	absolute()
	flexCenter()
	transitionOpacity()
	width 100%
	height 100vh
	z-index 5
.js-container
	transitionMaxWidth()
	width 100%
	max-width 1100px
	height 100%
	margin auto
	position relative
	padding 20px
.js-container--negative
	margin -50px auto 20px auto
.js-container--title
	padding 10px 0 0 0
	h2
		padding 0 30px
		margin 0
.js-input
	margin 5px 0
	padding 0 5px
	.form-control
		border-radius 0
		height 42px
		padding 6px 10px
		font-size 15px
		font-family $regular
.mdl-radio__inner-circle
	background #4983B6
.mdl-radio__ripple-container 
	.mdl-ripple
		background #4983B6
.mdl-radio
	font-weight 100
	&.is-checked 
		.mdl-radio__outer-circle
			border 2px solid #4983B6
.js-carousel
	flexCenter()
	justify-content flex-start
	position relative
	width 100%
	max-width 675px
	.table-responsive
		width 100%
		max-width 205px
		margin auto
		border 1px solid $color
		border-radius 10px
		table
			margin 0
.js-button
	background-color $color
	color #FFFFFF
	text-transform initial
	height 30px
	line-height 20px
	font-family $bold
	max-width 120px
	width 100%
	&:hover
		background-color $color
.js-user
	flexCenter()
	justify-content flex-end
	width 100%
	padding 5px 10px
	p
		margin 0
		padding 0 10px
		margin-right 10px
		border-right 1px solid #FFFFFF
		line-height 18px
		color #FFFFFF
	a
		font-family $bold
		cursor pointer
		color #FFFFFF
.title-fase
	background-color #CCCCCC
	padding 10px
	margin 40px 0 15px 0
	p
		margin 0
		font-family $bold
.js-facturas
	text-align center
	padding 30px 0
	h2
		margin 0
		font-size 40px
		line-height 36px
	a
		background-color #D7410B !important
		text-transform initial
		color #FFFFFF
		font-family $bold
		font-size 22px
		margin-top 20px
		text-decoration none
#participantes
